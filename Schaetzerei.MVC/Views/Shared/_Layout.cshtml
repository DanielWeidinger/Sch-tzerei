<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lato" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/schea.css" />
</head>
<body>
<header>
    <div class="schea-nav-bar-container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3 schea-nav-bar">
            <a class="schea-heading" asp-area="" asp-controller="Main" asp-action="Index">@ViewData["Title"]</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1 schea-heading">
                    <li class="nav-item schea-nav-bar-divider">
                        <a class="schea-heading" asp-area="" asp-controller="Main" asp-action="Index">Tutorial</a>
                    </li>
                    <li class="nav-item schea-nav-bar-divider">
                        <a class="schea-heading" asp-area="" asp-controller="Main" asp-action="Privacy">Donate</a>
                    </li>
                    <li class="schea-nav-bar-divider">
                    </li>
                    <li class="nav-item schea-login-region">
                        <img src="content/fingerprint.svg"/>
                        <a class="schea-subheading" asp-area="" asp-controller="Main" asp-action="Privacy">Login/Signup</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2021 - Schaetzerei - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
